html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")

		title Register
	body
		include ../partials/header.pug
		div.container-fluid
			div.jumbotron
				h1 Register
			form.was-validated(action="/register" method="post")
				div.form-group
					label(for="username") Username:
					input#username.form-control(type="text" name="username" placeholder="Enter username" required)
					div.valid-feedback Valid
					div.invalid-feedback Please fill out this field
				div.form-group
					label(for="password") Password: 
					input#password.form-control(type="password" name="password" placeholder="Enter password" required)
					div.valid-feedback Valid
					div.invalid-feedback Please fill out this field
				input(type="submit" value="Submit")

		script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
